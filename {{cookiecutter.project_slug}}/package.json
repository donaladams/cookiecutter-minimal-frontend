{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "{{ cookiecutter.version }}",
  "description": "{{ cookiecutter.project_short_description }}",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha test/index.js",
    "develop": "parallel watch-compile server watch-bundle watch-css",
    "watch-compile": "find src | grep 'tsx\\?$' | xargs tsc -w --outDir build --jsx react typings/main.d.ts",
    "watch-bundle": "watchify build/index.js -o build/main.js",
    "build-css": "./bin/build-css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "server": "http-server",
    "setup": "typings install"
  },
  "author": "{{ cookiecutter.full_name }}",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^8.1.3",
    "http-server": "^0.9.0",
    "node-sass": "^3.6.0",
    "nodemon": "^1.9.1",
    "npm-parallel": "^2.0.1",
    "tsc": "^1.7",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "react": "^15.0.1",
    "react-dom": "^15.0.1"
  }
}
